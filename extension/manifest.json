{
    "name": "Pushbully: Bulk Delete Pushes",
    "short_name": "Pushbully",
    "version": "2.0",
    "manifest_version": 2,
    "description": "Pushbully is an extension for Chrome that allows you to delete pushes in bulk easily.",
    "icons": {
        "16": "common/images/icon_16.png",
        "48": "common/images/icon_48.png",
        "128": "common/images/icon_128.png"
    },
    "author": "Karl Tatom",
    "homepage_url": "https://www.pushbullet.com/",
    "permissions": [ "*://*.pushbullet.com/*" ],
    "content_scripts": [
        {
            "matches": [ "*://*.pushbullet.com/*" ],
            "css": [ "common/inject.css" ],
            "js": [ "common/inject.js" ]
        }
    ]
}
